@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p id="vsl_count_text" role="status">Current count: @currentCount</p>

<button id="vsl_btn1" class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
